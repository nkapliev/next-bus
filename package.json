{
  "name": "next-bus",
  "version": "1.0.0",
  "description": "Chrome browser extension helps always be in touch with your next bus",
  "main": "none",
  "scripts": {
    "build-popup": "browserify app/js/src/popup.js -o app/js/dist/popup.js -t [ babelify ]",
    "build-background": "browserify app/js/src/background.js -o app/js/dist/background.js -t [ babelify ]",
    "build": "npm run build-popup && npm run build-background",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nkapliev/next-bus.git"
  },
  "keywords": [
    "browser",
    "extension",
    "chrome",
    "bus"
  ],
  "author": "Nikolai Kapliev nkapliev@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nkapliev/next-bus/issues"
  },
  "homepage": "https://github.com/nkapliev/next-bus#readme",
  "devDependencies": {
    "babelify": "^7.3.0",
    "browserify": "^13.1.1"
  }
}
